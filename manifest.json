{
	"manifest_version": 2,
	"name": "NewsBlur Local Feeds",
	"version": "1.0",

    "content_scripts": [
		{
			"matches": ["https://www.newsblur.com/*"],
			"js": ["dist/newsblur_content.js"]
		}
	],

	"background": {
		"scripts": ["dist/fetch_feeds_background.js", "src/browser_action.js"],
		"persistent": true,
		"type": "module"
	},

	"browser_action": {
		"default_title": "Newsblur Local Feeds"
	},

	"permissions": [
		"*://localhost/*",
		"storage",
		"unlimitedStorage",
		"alarms",
		"tabs"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "@newsblur-local-feeds"
		}
	}
}